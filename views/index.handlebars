<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center" id="title">
			<h4>Eat-Da-Burger YUM!</h4>
		</div>
	</div>

		<div class="col-md-6 text-center" class="list">
			<div class="row">
				{{#each burger_data}}
				{{#unless this.devoured}}
		</div>
			<div class="row">
			<div class="col-xs-9 text-center">
				<thead>
				<tr>
					<th> Burger Number </th>
					<th> Name of Burger </th>
				</tr>
				</thead>
				<tbody>
				<tr>
					<td> {{this.id}} </td>
					<td> {{this.burger_name}} </td>
				</tr>
				</tbody> 
				</div>
			</div>
		

	<div class="row">		
		<div class="col-xs-3 text-center">
			<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
				<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
				<button type="submit" class="btn btn-default">Devour That Burger!</button>
			</form>
		</div>
			{{/unless}}
			{{/each}}
	</div>
</div>	

	<div class="container">
		<div class="row">
			<div class="col-xs-12 text-center enter_section">
				<form action="/burgers/create" method="POST">
					<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
					<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
				</form>
				<p>Enter a burger you want to eat by clicking the "Submit" button.</p>
			</div>
		</div>
	</div>
</div>


			
		
